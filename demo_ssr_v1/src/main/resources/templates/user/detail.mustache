{{> layout/header}}

<div class="container p-5">
    <div class="card">
       <div class="card-header"><b>회원정보</b></div><div class="card-body">
        <div class="text-center mb4">
            {{#user}}
                {{#profileImage}}
                    <!--           이미지가 있을 떄 렌더링 처리-->
                    {{! src 경로가 /images/** 이므로 스프링에 등록된 리소스 핸들러가 동작함 }}
                    <img src="{{profilePath}}" alt="프로필 사진" class="rounded-circle border"
                         style="width: 200px; height: 200px; object-fit: cover">
                    <div class="mt-2">
                        {{#local}}
                        <form action="/user/profile-image/delete" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('프로필을 삭제하시겠습니까?')">사진 삭제</button>
                        </form>
                        {{/local}}
                    </div>
                {{/profileImage}}

                {{^profileImage}}
                    <!--            이미지가 없을 때 렌더링 처리 -->
                    <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center border"
                         style="width: 200px; height: 200px;">
                        <span class="text-white fs-5">프로필 사진 없음</span>
                    </div>
                {{/profileImage}}
            {{/user}}
            <!--                프로필 이미지 없음 end-->

        </div>
        <div class="mb-3">
            <label for="" class="form-label fw-bold">사용자명</label>
            <p class="form-control-plaintext">{{user.username}}</p>
        </div>
        <div class="mb-3">
            <label for="" class="form-label fw-bold">이메일</label>
            <p class="form-control-plaintext">{{user.email}}</p>
        </div>
        <div class="mb-3">
            <label for="" class="form-label fw-bold">가입일</label>
            <p class="form-control-plaintext">{{user.createdAt}}</p>
        </div>
        <div class="mb-3">
            <label for="" class="form-label fw-bold">보유 포인트</label>
            <p class="form-control-plaintext">
                <span class="badge bg-primary fs-6">{{user.point}}P</span>
            </p>
        </div>
    </div>
        <div class="d-grid gap-2 mb-3">
            <a href="/user/point/charge" class="btn btn-success">포인트 충전</a>
            {{#user.isLocal}}
            <a href="/user/update" class="btn btn-primary">회원정보 수정 화면</a>
            {{/user.isLocal}}
            <a href="/board/list" class="btn btn-secondary">목록으로</a>
        </div>
    </div>

</div>
{{> layout/footer}}