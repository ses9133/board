{{> layout/header}}

<div class="container p-5">
    <!--  외부 카드  -->
    <div class="card">
        <div class="card-header mb-0">
            <h4><b>결제 내역</b></h4>
        </div>

        <!-- 내부 카드 -->
        <div class="card-body">
            {{#paymentList}}
                <div class="d-flex">
                    <div class="flex-grow-1">
                        <h5 class="card-title mb-2">결제 {{id}}</h5>
                        <p class="text-muted mb-2">
                            <i class="fas fa-receipt"></i> 주문번호 : {{merchantUid}}
                        </p>
                        <p class="text-muted mb-2">
                            <i class="fas fa-receipt"></i> 결제번호 : {{impUid}}
                        </p>
                        <p class="text-muted mb-2">
                            <i class="fas fa-receipt"></i> 결제일 : {{paidAt}}
                        </p>
                        <p class="text-muted mb-2">
                            <i class="fas fa-receipt"></i> 상태 : {{statusDisplay}}
                        </p>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-primary fs-6">{{amount}} P</span>
                        {{#isRefundable}}
                            <!--  /refund/request/1  (만들어야 함) 1은 userId -->
                            <a href="/refund/request/{{id}}" class="btn btn-outline-danger btn-sm">환불하기</a>
                        {{/isRefundable}}
                    </div>
                </div>
            {{/paymentList}}

            <div class="mt-4">
                <a href="/refund/list" class="btn btn-info">
                    <i class="fas fa-undo"></i>
                    환불 요청 내역</a>
                <a href="/user/detail" class="btn btn-secondary">회원정보로 돌아가기</a>
            </div>

        </div>
    </div>
</div>



{{> layout/footer}}