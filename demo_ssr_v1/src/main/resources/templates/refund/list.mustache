{{> layout/header}}

<div class="container p-5">
    <!--  외부 카드  -->
    <div class="card">
        <div class="card-header mb-0">
            <h4><b>환불 요청 내역(사용자)</b></h4>
        </div>
        <div class="card-body">
            {{#refundList}}
                <div class="d-flex">
                    <div class="flex-grow-1">
                        <h5 class="card-title mb-2">환불 요청 #{{id}}</h5>
                        <p class="text-muted mb-2">
                            <i class="fas fa-receipt"></i> 결제 ID : {{paymentId}}
                        </p>
                        <p class="text-muted mb-2">
                            <i class="fas fa-receipt"></i> 환불 금액 : <span class="text-danger"><strong>{{amount}}
                            P</strong></span>
                        </p>
                        <p class="text-muted mb-2">
                            <i class="fas fa-receipt"></i> 환불 사유 : {{reason}}
                        </p>
                        <p class="text-muted mb-2">
                            <i class="fas fa-receipt"></i> 상태:
                            {{#isPending}}
                                <span class="badge bg-warning">{{statusDisplay}}</span>
                            {{/isPending}}
                            {{#isApproved}}
                                <span class="badge bg-success">{{statusDisplay}}</span>
                            {{/isApproved}}
                            {{#isRejected}}
                                <span class="badge bg-secondary">{{statusDisplay}}</span>
                            {{/isRejected}}
                        </p>
                        {{#rejectReason}}
                            <p class="text-muted mb-2">
                                <i class="fas fa-receipt"></i> 거절 사유 : <span class="text-danger">{{rejectReason}}</span>
                            </p>
                        {{/rejectReason}}
                    </div>
                </div>
            {{/refundList}}
            <div class="mt-4">
                <a href="/user/detail" class="btn btn-secondary">회원 정보로 돌아가기</a>
            </div>

        </div>
    </div>
</div>


{{> layout/footer}}